<%= form_for(@product, html: {class: 'form-horizontal'}) do |f| %>
  <% if @product.errors.any? %>
    <div id='error_explanation'>
      <h6><%=pluralize(@product.errors.count, 'error') %> prohibits product from being saved: </h6>
      <ul>
        <%= @product.errors.full_messages.each do |msg| %>
          <li><%=msg%></li>
        <%end%>
      </ul>
    </div>
  <%end%>
  <div class='form-group'>
    <%= f.label :title, class:'control-label col-sm-2'%>
    <div class='col-sm-4'>
      <%= f.text_field :title, class:'form-control span4'%>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label :category, class:'control-label col-sm-2'%>
    <div class='col-sm-4'>
      <%= f.select(:category_id, @category, {}, {class:'form-control span4'})%>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label :description, class:'control-label col-sm-2'%>
    <div class='col-sm-8'>
      <%= f.text_area :description, {class:'form-control', rows: 10}%>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label :price, class:'control-label col-sm-2'%>
    <div class='col-sm-4'>
      <%= f.number_field :price, class:'form-control span4', step:'0.01'%>
    </div>
  </div>
  <div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit 'Save', class:'btn btn-default' %>
  </div>
<%end%>
