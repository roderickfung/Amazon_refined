<div id='<%=dom_id(review)%>'>
  <div class='row'>
    <div class='col-xs-offset-3 col-xs-1 mod-btns'>
      <%=link_to 'Delete', product_review_path(review.product_id, review.id), method: :delete, remote: true, class:'btn btn-secondary'%>
    </div>
    <div class='col-xs-6'>
      <div class='review-star'>
        <%review.star_count.times do |s|%>
          <i class='glyphicon glyphicon-star'></i>
        <%end%>
      </div>
      <div class='review-body'>
        <%=review.body%>
      </div>
    </div>
  </div>
</div>
